{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/**/*.d.ts"],
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts",
  ],
}
